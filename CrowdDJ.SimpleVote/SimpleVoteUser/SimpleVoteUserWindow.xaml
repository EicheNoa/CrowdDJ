                        <i:EventTrigger EventName="MediaEnded">
                            <i:InvokeCommandAction Command="{Binding NextTrackCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </MediaElement>--><!--
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
